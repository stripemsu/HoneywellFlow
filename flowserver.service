[Unit]
Description=Flow Meters server

[Service]
Type=simple
WorkingDirectory=/srv/flow
ExecStart=/srv/flow/FlowServer.py
ExecStop=/bin/kill `/bin/ps aux | /bin/grep FlowServer.py | /bin/grep -v grep | /usr/bin/awk '{ print $2 }'`
Restart=always
RestartSec=2
TimeoutStopSec=1

[Install]
WantedBy=multi-user.target
